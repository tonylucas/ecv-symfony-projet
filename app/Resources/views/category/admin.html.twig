{% extends 'base.html.twig' %}


{% block body %}
    
        <h1>Catégories</h1>
    
        
            {% for category in categories %}
                <div class="row panel">

                    <div class="col-xs-6">

                        <a href="{{ path('category_show', {id: category.id}) }}">
                            <h3>{{ category.title }}</h3>
                        </a>

                    </div>

                    <div class="col-xs-6">
                        <a class="btn btn-primary" href="{{ path('category_edit', {id: category.id}) }}">
                            Éditer
                        </a>
                    </div>
               
                </div>
                
            {% endfor %}
        
        

    
    
{% endblock %}
{% extends 'base.html.twig' %}


{% block body %}
    <h1>Catégories</h1>
    
    <a class="btn btn-primary" href="{{ path('category_new') }}">Nouvelle catégorie</a>
    
    <br>
    
    {% for message in app.session.flashBag.get('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    
    
    {% for category in categories %}

        <a href="{{ path('category_show', {id: category.id}) }}">
            <h3>{{ category.name }}</h3>
        </a>
        <a class="btn btn-primary" href="{{ path('category_edit', {id: category.id}) }}">
            Éditer
        </a>
        <a class="btn btn-danger" href="{{ path('category_delete', {id: category.id}) }}">
            Supprimer
        </a>
        <hr>

    {% endfor %}
    
{% endblock %}